<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.icon %></td>
        <td><%= group.user_id %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Group', new_group_path %>-->

<% provide(:navbar_page_title, "all my groups") %>
<div class="options-order">
  <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
  <div><%= link_to 'Most recent', groups_path, class:"btn btn-link link-login-submit" %></div>
  <div><%= link_to 'Most ancient', groups_path, class:"btn btn-link link-login-submit" %></div>
</div>

<br>
<% @groups.each do |group| %>
  <div class="item-shopping_list">
    <div class="icon-shopping_list">
      <%= link_to "<i class='#{ group.icon }'></i>".html_safe,  group_shopping_lists_path(:id => group.id) %>
    </div>
    <div class="content-shopping_list">
      <h2><%= link_to group.name, group %></h2>      
      <h3><%= group.created_at.strftime("%b %d, %Y - %I:%M%p" ).downcase %></h3>
    </div>
    <div class="price-shopping_list"><%= group.creator.username %></div>
  </div>
<% end %>
<%= button_to "New", new_group_path,  :class => "btn new-shopping_list-button", :method => :get %>
